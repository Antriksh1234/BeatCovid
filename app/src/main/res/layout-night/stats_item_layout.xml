<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/round_bg_theme_color">

    <TextView
        android:id="@+id/province_name"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Madhya Pradesh"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/confirmed_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/recovered_stats"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Confirmed"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/recovered_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/deaths_stats"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Recovered"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/deaths_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/active_stats"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Deaths"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/active_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Active"
        android:textColor="@color/white"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/confirmed_stats_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/recovered_stats"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Confirmed"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/recovered_stats_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/deaths_stats"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Recovered"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/deaths_stats_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/active_stats"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Deaths"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/active_stats_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="Active"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:textSize="20sp" />



</RelativeLayout>